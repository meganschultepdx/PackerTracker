@using PackerTracker.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>TrackerPacker</title>
    @* <link href="https://fonts.googleapis.com/css?family=Ruge+Boogie|The+Girl+Next+Door" rel="stylesheet">
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css"> *@
  </head>
  <body class="container">
    <h1>List of Your Backpacking Suppies:</h1>

    <ul>

      @foreach (Supply supply in Model)
      {
        <li>@supply.Name</li>
        <ul>
        <li>$@supply.Packed</li>
        <li>@supply.Weight lb</li>
        <li>@supply.NeedToBuy</li>
        </ul>
        <form action="/supply/@supply.Id/delete" method="post">
          <button type="submit" name="button">Remove this Supply</button>
        </form>

      }

    </ul>
    <a href="/supply/new">Add another supply to your list!</a>

    </html>
  </body>
